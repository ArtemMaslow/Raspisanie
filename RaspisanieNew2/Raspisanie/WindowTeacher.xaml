<Window x:Class="Raspisanie.WindowTeacher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Raspisanie"
        WindowStartupLocation="CenterScreen"
        Title="Преподаватели"
        Height="500"
        Width="700"
        mc:Ignorable="d">

    <Grid Background="Lavender">
        <Grid.RowDefinitions>
            <RowDefinition Height="400" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ListView
            Grid.Row="0"
            Grid.ColumnSpan="4"
            ItemsSource="{Binding ClassTeacher}"
            SelectedIndex="{Binding Index}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding CodeOfTeacher}">Код преподавателя</GridViewColumn>
                    <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding FIO}">Имя преподавателя</GridViewColumn>
                    <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Post}">Должность</GridViewColumn>
                    <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Department}">Кафедра</GridViewColumn>
                    <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Mail}">e-mail</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button
            Grid.Row="1"
            Grid.Column="0"
            Width="Auto"
            Height="Auto"
            Margin="10"
            Command="{Binding AddCommand}"
            Content="Добавить" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Width="Auto"
            Height="Auto"
            Margin="10"
            Command="{Binding EditCommand}"
            Content="Редактировать" />
        <Button
            Grid.Row="1"
            Grid.Column="2"
            Width="Auto"
            Height="Auto"
            Margin="10"
            Command="{Binding RemoveCommand}"
            Content="Удалить" />
        <Button
            Grid.Row="1"
            Grid.Column="3"
            Width="Auto"
            Height="Auto"
            Margin="10"
            Command="{Binding LoadCommand}"
            Content="Загрузить из файла" />
    </Grid>
</Window>
